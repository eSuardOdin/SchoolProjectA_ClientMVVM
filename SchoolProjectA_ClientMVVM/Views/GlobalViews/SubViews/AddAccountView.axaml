<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 
			 xmlns:vm="using:SchoolProjectA_ClientMVVM.ViewModels"
			 x:DataType="vm:AddAccountViewModel"
             x:Class="SchoolProjectA_ClientMVVM.Views.AddAccountView">

	<Panel VerticalAlignment="Center">
		<StackPanel Margin="20"
					HorizontalAlignment="Center"
					Grid.Row="0"
					Grid.Column="0"
					Grid.ColumnSpan="2"
					Spacing="25"
					>
			<TextBox Width="250"
					 Watermark="Nom du compte"
					 Text="{Binding BankAccountLabel}"
					 MaxLength="128"/>
			<NumericUpDown Value="{Binding BankAccountBalance}"
							Increment="1"
							FormatString="0.00" />
			<Grid ColumnDefinitions="*,*">
				<Button HorizontalAlignment="Stretch"
						HorizontalContentAlignment="Center"
						Command="{Binding AddCommand}">Ok</Button>
				<Button Grid.Column="1"
						HorizontalAlignment="Stretch"
						HorizontalContentAlignment="Center"
						Background="Red"
						Command="{Binding CancelCommand}">
					Annuler
				</Button>
			</Grid>
		</StackPanel>
	</Panel>
		


</UserControl>
