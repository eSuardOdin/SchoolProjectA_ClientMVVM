<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 
			 xmlns:vm="using:SchoolProjectA_ClientMVVM.ViewModels"
			 x:DataType="vm:ShowTagsViewModel"
             x:Class="SchoolProjectA_ClientMVVM.Views.ShowTagsView">

	<StackPanel>
		<Button HorizontalAlignment="Stretch"
				HorizontalContentAlignment="Center"
				Background="Green"
				Foreground="White"
				FontWeight="Bold"
				>
			Ajouter une balise
			<!--Command="{Binding $parent[Window].DataContext.ContentViewModel.ContainedViewModel.AddAccount}"
				x:CompileBindings="False"-->
		</Button>
		<ScrollViewer>
			<ListBox ItemsSource="{Binding Tags}"
					 MaxHeight="650"
					 Background="White"
					 HorizontalAlignment="Center"
					 MaxWidth="400">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<ScrollViewer>
							<Border BorderBrush="Gray"
									BorderThickness="2"
									CornerRadius="5">
								<StackPanel Spacing="8"
											Margin="3">
									<TextBlock Text="{Binding TagLabel}"
											   FontWeight="Bold"/>
									<TextBlock Text="{Binding TagDescription}"
											   TextWrapping="Wrap"/>
									<Button Tag="{Binding TagId}">
										Test
									</Button>
								</StackPanel>
							</Border>
						</ScrollViewer>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</ScrollViewer>
	</StackPanel>
	
</UserControl>
